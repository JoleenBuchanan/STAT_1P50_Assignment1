import math

radiioftwocircles = (12,20)
print('Area of Circle is: A = Ï€r^2')
for radiis in radiioftwocircles: #inserting the fuction into the for loop
    def percentageareaofcircle(pi,x,y=2):
     result = ((pi*x**y)/100)#defining
     return result
    x = radiis
    pi = math.pi
    i = 0
    result = percentageareaofcircle(pi,x)


    if i == 0:
        result1 = result
    else:
        result2 = result

    if result1 >= result2:
        larger_area, smaller_area = result1, result2
    else:
        larger_area, smaller_area = result2, result1

    coverage = (smaller_area / larger_area)
print('Result 1:', result1)
print('Result 2:', result2)
print('Coverage =',coverage,'%')
print('Percentage Area of larger circle =',result,'%')

